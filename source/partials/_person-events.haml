%ul.events
  %hr
  %li
    %h2#awards
      Awards
    %ul
      - yaml.awards.each do |e|
        %li.event
          %h4
            =e.title
          %p
            =e.body
          .audit-info
            Created by
            %a{href: "#{e.created_by_url}"}
              =e.created_by
  %hr
  %li
    %h2#conversations
      Conversations
    %ul
      - yaml.conversations.each do |e|
        %li.event
          %h4
            =e.title
          %p
            =e.body
          .audit-info
            Created by
            %a{href: "#{e.created_by_url}"}
              =e.created_by
  %hr
  %li
    %h2#one-on-ones
      One-On-Ones
    %ul
      - yaml.one_on_ones.each do |e|
        %li.event
          %h4
            =e.title
          %p
            =e.body
          %ul
            - e.bullets.each do |b|
              %li
                =b
          .audit-info
            Created by
            %a{href: "#{e.created_by_url}"}
              =e.created_by
  %hr
  %li
    %h2#promotions
      Promotions
    %ul
      - yaml.promotions.each do |e|
        %li.event
          %h4
            =e.title
          %p
            =e.body
          %ul
            - e.bullets.each do |b|
              %li
                =b
          .audit-info
            Created by
            %a{href: "#{e.created_by_url}"}
              =e.created_by
  %hr
  %li
    %h2#reviews
      Reviews
    %ul
      - yaml.reviews.each do |e|
        %li.event
          %h4
            =e.title
          %h5
            Recommendation
          =e.recommendation
          %h5
            Doing well
          %ul
            - e.positives.each do |p|
              %li
                =p
          %h5
            Needs improvement
          %ul
            - e.negatives.each do |n|
              %li
                =n
          .audit-info
            Created by
            %a{href: "#{e.created_by_url}"}
              =e.created_by
  %hr
  %li
    %h2#salary
      Salary
    %ul
      - yaml.salary_milestones.each do |e|
        %li.event
          %h4
            =e.title
          %p
            =e.body
          .audit-info
            Created by
            %a{href: "#{e.created_by_url}"}
              =e.created_by